<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mageinn" translate="label" sortOrder="110">
            <label>Mageinn</label>
        </tab>
        <section id="mageinn_emailwhitelist" translate="label" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Email Whitelist</label>
            <tab>mageinn</tab>
            <resource>Mageinn_EmailWhitelist::config_EmailWhitelist</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" canRestore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="whitelist_email" translate="label" type="textarea" sortOrder="20" showInDefault="1">
                    <label>Emails</label>
                    <comment>WhiteList for sending Email</comment>
                </field>
            </group>
        </section>
    </system>
</config>









